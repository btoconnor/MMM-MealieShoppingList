{% if error %}
    <div class="light xsmall">Error</div>
{% elif loading %}
    <div class="dimmed light small">Loading...</div>
{% endif %}

{% if not loading %}
    {% if items.length > 0 %}
        <ul>
            {% for item in items %}
                <li>{{ item.display }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="empty-list">No entries.</div>
    {% endif %}
{% endif %}
